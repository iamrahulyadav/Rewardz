<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:lottie_fileName="gift.json"
        android:background="@color/transparent"
        app:lottie_loop="true"
        android:visibility="visible"
        app:lottie_autoPlay="true"
        />
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingTop="@dimen/padding_10"
        android:layout_below="@+id/animation_view"
        android:layout_alignLeft="@+id/animation_view"
        android:layout_alignStart="@+id/animation_view"
        android:textSize="20sp"
        android:text="Thank you for installing our app."
        android:textAlignment="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_10"
        android:layout_below="@+id/tv"
        android:layout_alignLeft="@+id/tv"
        android:layout_alignStart="@+id/tv"
        android:textAlignment="center"
        android:text="You and your referer friend have been credited with points for Installing from a referral."/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_below="@+id/tv2"
        android:layout_alignLeft="@+id/tv2"
        android:layout_alignStart="@+id/tv2"
        android:orientation="horizontal">



        <Button
            android:id="@+id/gift_dismiss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:textSize="18sp"
            android:text="Dismiss"
            />
    </LinearLayout>


</RelativeLayout>