<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.letswecode.harsha.rewardz.ui.MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_fileName="loading_data.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:visibility="gone"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/empty_animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_fileName="empty_box.json"
        app:lottie_loop="true"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        />
     <TextView
         android:id="@+id/no_location_Tv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="On location service"
         android:visibility="gone"/>

</RelativeLayout>

